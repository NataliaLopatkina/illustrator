mixin post(item)
    div(class="post")&attributes(attributes)
        div(class="post__header")
            img(class="post__img" src="images/icons/" + item.image + ".png" alt="Post")
            div(class="post__info")
                a(class="post__title" href="#5") !{item.title}
                p(class="post__description") !{item.descriptionText} - 
                    if item.date
                        time(class="post__date" datetime="5-20-2011") !{item.date}
        div(class="post__body")
            p(class="post__text") !{item.text}
            if item.moreText
                p(class="post__text") !{item.moreText}
